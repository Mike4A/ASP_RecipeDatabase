@model RecipeDatabase.Models.Recipe
@{
    ViewBag.Title = Model.Name;
}
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImagePath"
                 alt="@Model.Name"
                 class="img-fluid">
        </div>
        <div class="col-md-6">
            <h1>@Model.Name</h1>
            <h4>Category: @Model.Category</h4> 
            <hr>
            <h3>Description:</h3>
            <p>@Html.Raw(Model.Description)</p>
            <h3>Instructions:</h3>
            <p>@Html.Raw(Model.RecipeInstructions!.Replace("\n", "<br>"))</p>
        </div>
    </div>
</div>